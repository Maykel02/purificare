---
const { href, title, items } = Astro.props;
---
<div class="flex flex-col items-center">
    <div class="px-10 -mb-16 z-20">
        <img class="w-full" src={href} alt="">
    </div>
    <div class="z-0 bg-[--color-second] text-white rounded-lg pt-24 px-5 pb-10 overflow-hidden">
        <h3 class="text-center text-xl leading-5">{title}</h3>
        <ul class="mt-7 pl-5 text-sm">
            { items.map((item)=>(
                <li class="list-disc">{item}</li>
            ))}
        </ul>
    </div>
</div>

